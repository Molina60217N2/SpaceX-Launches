---
//ejecutar el js que se quiera
import { getOldestLaunches } from "../services/spacex";
import CardLaunch from "../components/CardLaunch.astro";

const launches = await getOldestLaunches();
---

<div class="grid mx-auto max-w-6xl gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map((launch) => (
      <CardLaunch
        id={launch.id}
        img={launch.links.patch.small}
        details={launch.details}
        flightNumber={launch.flight_number}
        success={launch.success}
      />
    ))
  }
</div>
